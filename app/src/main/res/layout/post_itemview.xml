<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:padding="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        >


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/homePostProfileImage"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:src="@drawable/person"

             />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/homePostName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shashank Ranjan"
                android:textStyle="bold"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/homePostDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 days ago"
                android:textSize="15sp"
                />

        </LinearLayout>

    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <ImageView
            android:id="@+id/homePostImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:src="@drawable/examplepost"
            />

        <ProgressBar
            android:id="@+id/homePostPB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="visible" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        >


        <ImageView
            android:id="@+id/homePostLike"
            android:layout_width="72px"
            android:layout_height="72px"
            android:src="@drawable/heart"
            android:layout_marginRight="20dp"
            />
        <ImageView
            android:id="@+id/homePostComment"
            android:layout_width="72px"
            android:layout_height="72px"
            android:src="@drawable/logo_comment"
            android:layout_marginEnd="20dp"
            />
        <ImageView
            android:id="@+id/homePostSend"
            android:layout_width="72px"
            android:layout_height="72px"
            android:src="@drawable/send_icon"

            />

<RelativeLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    >


    <ImageView
        android:id="@+id/homePostSave"
        android:layout_width="72px"
        android:layout_height="72px"
        android:src="@drawable/icon_save"
        android:layout_alignParentEnd="true"

        />
</RelativeLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/homePostLikeNumbers"
        android:layout_width="match_parent"
        android:layout_height="20dp"

        android:textStyle="bold"
        android:layout_marginStart="5dp"

        />

    <TextView
        android:id="@+id/homePostCaption"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textStyle="bold"
        android:text="caption"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="5dp"
        />
</LinearLayout>